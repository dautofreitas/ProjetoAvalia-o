
@{
    ViewBag.Title = "FindCodigoRegistro";
}

<h2>FindCodigoRegistro</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("CodigoRegistro", "Código Registro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("CodigoRegistro", null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("CodigoRegistro", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reisitrar saída" class="btn btn-default" />
            </div>
        </div>
    </div>
}
