<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("G.E.A Web", "MenuRegistroDeFluxo", "RegistroDeFluxo", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if(User.Identity?.Name.Split('|')?[1] == "Administrador")
                    {
                                            
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Operador <span class="caret"></span></a>
                            <ul class="dropdown-menu">                           
                                <li>@Html.ActionLink("Listar", "Index", "Operador")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Cadastrar", "Create", "Operador")</li>
                            
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Empresa <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Listar", "Index", "Empresa")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Cadastrar", "Create", "Empresa")</li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Faturamento <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Listar", "Index", "Faturamento")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Gerar", "Create", "Faturamento")</li>

                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Registro de Fluxo <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          
                            <li>@Html.ActionLink("Listar", "Index", "RegistroDeFluxo")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Menu Registro de Fluxo", "MenuRegistroDeFluxo", "RegistroDeFluxo")</li>

                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right ">                    
                    <li>@Html.ActionLink("LogOut", "LogOut", "Autentication",null, new { @class = "glyphicon glyphicon-log-out" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        
        <div class="row">            
            @RenderBody()
        </div>
        <hr />
        <footer>
           
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
